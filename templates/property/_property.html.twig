<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') }}" alt="{{ property.filename }}" class="card-img-top" style="width: 100%; height: 230px">
    {% else %}
        <img src="{{ '/images/properties/empty.jpg' }}" alt="{{ property.filename }}" class="card-img-top" style="width: 100%; height: 230px">
    {% endif %}

    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} {{ property.postalCode }}</p>
        <div class="text-primary" style="font-weight: bold; font-size: 2rem;">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>

